<form method="post">
	<input type="hidden" name="id" id="id">
	<label>Name</label><input type="text" name="name" id="name">
	<label>Reps</label><input type="text" name="reps" id="reps">
	<label>Weight</label><input type="text" name="weight" id="weight">
	<label>Date</label><input type="date" name="date" id="date">
	<label>lbs</label><input type="text" name="lbs" id="lbs"><br/>
	<input type="submit" id="addItem" value="Add Item">
</form>

{{#if results}}
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Reps</th>
			<th>Weight</th>
			<th>Date</th>
			<th>lbs</th>
		</tr>
	</thead>
	{{#each results}}
	<tbody>
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.date}}</td>
			<td>{{this.lbs}}</td>
			<td><a href="/edit?id={{this.id}}"><button>Edit</button></a></td>
			<td><a href="/delete?id={{this.id}}"><button>Delete</button></a></td>
		</tr>
	</tr>
	{{/each}}
	</tbody>
</table>
{{/if}}